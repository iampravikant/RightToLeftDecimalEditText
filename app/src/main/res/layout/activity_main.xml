<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/main_package_measurements"
        android:textSize="20sp" />

    <io.pravikant.rtledittext.RightToLeftDecimalEditText
        android:id="@+id/main_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_weight_kg"
        app:rtl_decimal_points="3"
        app:rtl_decimal_value="0.000" />

    <io.pravikant.rtledittext.RightToLeftDecimalEditText
        android:id="@+id/main_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_width_mtr"
        app:rtl_decimal_points="2"
        app:rtl_decimal_value="0.00" />

    <io.pravikant.rtledittext.RightToLeftDecimalEditText
        android:id="@+id/main_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_height_mtr"
        app:rtl_decimal_points="2"
        app:rtl_decimal_value="0.00" />

    <Button
        android:id="@+id/main_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/main_submit" />
</LinearLayout>
